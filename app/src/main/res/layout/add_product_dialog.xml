<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_dialog_edt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/product_name"/>
    <EditText
        android:layout_marginTop="@dimen/marginTop"
        android:id="@+id/add_dialog_edt_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/product_price"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/add_dialog_btn_decrease"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:text="-"
           android:textSize="17sp"
           android:textColor="@android:color/white"
           android:backgroundTint="@color/colorAccent"
           android:textStyle="bold"/>
       <EditText
           android:id="@+id/add_dialog_edt_product_qunatitiy"
           android:layout_width="50dp"
           android:layout_height="wrap_content"
           android:text="0"
           android:textAlignment="center"/>
       <Button
           android:id="@+id/add_dialog_btn_increase"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:text="+"
           android:textStyle="bold"
           android:textSize="17sp"
           android:textColor="@android:color/white"
           android:backgroundTint="@color/colorAccent"/>
   </LinearLayout>

</LinearLayout>